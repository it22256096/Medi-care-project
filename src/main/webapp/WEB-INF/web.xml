<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
     <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.mlt.LoginServlet</servlet-class>
        
     </servlet>
         
     <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/log</url-pattern>
     </servlet-mapping>    
     
     
     <servlet>
       <servlet-name>mltinsert</servlet-name>
       <servlet-class>com.mlt.mltinsert</servlet-class>
     </servlet>
     
     <servlet-mapping>
       <servlet-name>mltinsert</servlet-name>
       <url-pattern>/insert</url-pattern>
     </servlet-mapping>
     
     <servlet>
       <servlet-name>updatemlt</servlet-name>
       <servlet-class>com.mlt.UpdateMltServlet</servlet-class>
     </servlet>
     
       <servlet-mapping>
         <servlet-name>updatemlt</servlet-name>
         <url-pattern>/update</url-pattern>
         
       </servlet-mapping>
       
       
       
       <servlet>
        <servlet-name>deletemlt</servlet-name>
        <servlet-class>com.mlt.DeleteMltServlet</servlet-class>
        
     </servlet>
         
     <servlet-mapping>
        <servlet-name>deletemlt</servlet-name>
        <url-pattern>/delete</url-pattern>
     </servlet-mapping> 
     
     
</web-app>   